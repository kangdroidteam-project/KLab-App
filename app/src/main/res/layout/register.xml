<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="20dp"
        android:text="Join"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="50dp"
                app:boxStrokeColor="@color/green_700"
                app:boxStrokeWidthFocused="5dp"
                app:boxStrokeWidth="5dp"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00000000"
                    android:textSize="25dp"
                    android:hint="ID" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="50dp"
                app:boxStrokeColor="@color/green_700"
                app:boxStrokeWidthFocused="5dp"
                app:boxStrokeWidth="5dp"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00000000"
                    android:textSize="25dp"
                    android:hint="Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="50dp"
                app:boxStrokeColor="@color/green_700"
                app:boxStrokeWidthFocused="5dp"
                app:boxStrokeWidth="5dp"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00000000"
                    android:textSize="25dp"
                    android:hint="Address" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="50dp"
                app:boxStrokeColor="@color/green_700"
                app:boxStrokeWidthFocused="5dp"
                app:boxStrokeWidth="5dp"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00000000"
                    android:textSize="25dp"
                    android:hint="Phone Number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pwlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                app:boxStrokeColor="@color/green_700"
                app:boxStrokeWidth="5dp"
                app:boxStrokeWidthFocused="5dp"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_pw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00000000"
                    android:hint="Password"
                    android:textSize="25dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pwchecklayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                app:boxStrokeColor="@color/green_700"
                app:boxStrokeWidth="5dp"
                app:boxStrokeWidthFocused="5dp"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_pw_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#00000000"
                    android:hint="Password Check"
                    android:textSize="25dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <ScrollView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/green_box2">
                    <TextView
                        android:id="@+id/Privacy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="개인정보약관"
                        android:textColor="#000000"
                        android:padding="15dp"
                        android:textSize="20dp"/>

            </ScrollView>

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:text="Agree"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/joinBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/green_box1"
                android:text="Join"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginHorizontal="70dp"
                />


            </LinearLayout>
    </ScrollView>
</LinearLayout>